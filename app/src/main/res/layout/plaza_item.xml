<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LL_Plaza"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPlazaChannel"
                android:text="标题:XXXXXX"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvPlazaSubheading"
                android:text="副标题:XXXXX"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ToggleButton
            android:id="@+id/rbSubscription"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=" + 订阅"
            android:drawableLeft="@drawable/togglebutton_like"
            android:textColor="@color/Pink"
            android:textSize="15dp"
            android:textOff="@null"
            android:textOn="@null"
           android:padding="10dp"
            android:background="@color/Transparen"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.shehuan.niv.NiceImageView
                android:id="@+id/ivPlazaImage1"
                android:src="@mipmap/item1"
                app:corner_radius="10dp"
                app:border_width="5dp"
                android:background="@color/White"
                android:layout_width="180dp"
                android:layout_height="102dp" />
            <TextView
                android:id="@+id/tvPlazaContent1"
                android:layout_marginTop="5dp"
                android:text="内容"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.shehuan.niv.NiceImageView
                android:id="@+id/ivPlazaImage2"
                android:src="@mipmap/item1"
                app:corner_radius="10dp"
                app:border_width="5dp"
                android:background="@color/White"
                android:layout_width="180dp"
                android:layout_height="102dp" />
            <TextView
                android:id="@+id/tvPlazaContent2"
                android:layout_marginTop="5dp"
                android:text="内容"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>