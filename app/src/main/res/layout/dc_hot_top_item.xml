<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.shehuan.niv.NiceImageView
        android:id="@+id/CoverFlowAdapter"
        android:src="@mipmap/item1"
        app:corner_radius="10dp"
        app:border_width="2dp"
        android:layout_centerInParent="true"
        app:mask_color="#55000000"
        android:layout_gravity="center"
        android:layout_width="140dp"
        android:layout_height="78dp" />
    <TextView
        android:id="@+id/video_name1"
        android:text="热门评论"
        android:textColor="@color/White"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignLeft="@id/CoverFlowAdapter"
        android:layout_alignTop="@id/CoverFlowAdapter"
        android:layout_alignRight="@id/CoverFlowAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>