<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controller.fragmemt.HomePage.TabLayout.livestreamingfragment.LiveStreamingFragment">

<com.scwang.smartrefresh.layout.SmartRefreshLayout
    android:id="@+id/refreshLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

     <android.support.v4.widget.NestedScrollView
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <!--标签页开始-->
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/bntLol"
                            android:drawableTop="@drawable/live1"
                            android:text="英雄联盟"
                            style="@style/ClassifyBntStyle"
                            />
                        <Button
                            android:id="@+id/bntFang"
                            android:text="明日方舟"
                            android:drawableTop="@drawable/live2"
                            style="@style/ClassifyBntStyle"
                           />
                        <Button
                            android:id="@+id/bntWangZhe"
                            android:text="王者荣耀"
                            android:drawableTop="@drawable/live3"
                            style="@style/ClassifyBntStyle"
                             />
                        <Button
                            android:id="@+id/bntRecreation"
                            android:text="娱乐"
                            android:drawableTop="@drawable/live4"
                            style="@style/ClassifyBntStyle"
                           />
                        <Button
                            android:id="@+id/bntGame"
                            android:text="游戏"
                            android:drawableTop="@drawable/live5"
                            style="@style/ClassifyBntStyle"
                             />
                    </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/bntBroadcasting"
                                android:text="电台"
                                android:drawableTop="@drawable/live6"
                                style="@style/ClassifyBntStyle" />
                            <Button
                                android:id="@+id/bntJueDi"
                                android:text="绝地求生"
                                android:drawableTop="@drawable/live7"
                                style="@style/ClassifyBntStyle" />
                            <Button
                                android:id="@+id/bntDnf"
                                android:textSize="13dp"
                                android:text="地下城与勇士"
                                android:drawableTop="@drawable/live8"
                                style="@style/ClassifyBntStyle" />
                            <Button
                                android:id="@+id/bntShouWang"
                                android:text="守望先锋"
                                android:drawableTop="@drawable/live9"
                                style="@style/ClassifyBntStyle" />
                            <Button
                                android:id="@+id/bntLabel"
                                android:text="全部标签"
                                android:drawableTop="@drawable/live10"
                                style="@style/ClassifyBntStyle"/>
                        </LinearLayout>
            <!--标签页结束-->
            <View
                android:background="@color/Gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <!--我的关注开始-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/tvLiveAttention"
                        android:text="我的关注"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tvLiveTime"
                        android:layout_marginLeft="10dp"
                        android:text="XX人正在直播"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tvCheckMore"
                        android:text="查看更多 > "
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <com.shehuan.niv.NiceImageView
                                    android:id="@+id/ivLiveImage1"
                                    android:layout_marginTop="10dp"
                                    app:corner_radius="10dp"
                                    android:src="@mipmap/item6"
                                    android:layout_gravity="center"
                                    android:layout_width="160dp"
                                    android:layout_height="90dp"
                                    />
                                <LinearLayout
                                    android:layout_marginTop="10dp"

                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp">
                                    <ImageView
                                        android:id="@+id/ivLiveHeadPortrait1"
                                        android:layout_width="60dp"
                                        android:src="@drawable/ic_launcher_icon"
                                        android:layout_height="match_parent" />
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/tvLiveUser1"
                                            android:text="主播名"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                        <TextView
                                            android:id="@+id/tvLiveContent1"
                                            android:layout_weight="1"
                                            android:text="直播内容"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                        </LinearLayout>
                                    </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <com.shehuan.niv.NiceImageView
                                    android:layout_marginTop="10dp"
                                    app:corner_radius="10dp"
                                    android:src="@mipmap/item6"
                                    android:layout_gravity="center"
                                    android:layout_width="160dp"
                                    android:layout_height="90dp"
                                    />
                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp">
                                    <ImageView
                                        android:id="@+id/ivLiveHeadPortrait2"
                                        android:layout_width="60dp"
                                        android:src="@drawable/ic_launcher_icon"
                                        android:layout_height="match_parent" />
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/tvLiveUser2"
                                            android:text="主播名"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                        <TextView
                                            android:id="@+id/tvLiveContent2"
                                            android:layout_weight="1"
                                            android:text="直播内容"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--我的关注结束-->
            <View
                android:background="@color/Gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <!--推荐直播页开始-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
              <RelativeLayout
                  android:orientation="horizontal"
                  android:paddingLeft="20dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:text="推荐直播"
                      android:textSize="22dp"
                      android:layout_weight="1"
                      android:layout_centerVertical="true"
                      android:layout_alignParentLeft="true"
                      android:textColor="@color/Black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
                  <Button
                      android:text="换一换"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="10dp"
                      android:background="@android:color/transparent"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
              </RelativeLayout>
               <!--推荐直播第一列-->
              <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.shehuan.niv.NiceImageView
                                android:layout_marginTop="10dp"
                                app:corner_radius="10dp"
                                android:src="@mipmap/item6"
                                android:layout_gravity="center"
                                android:layout_width="160dp"
                                android:layout_height="90dp"
                                />
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:src="@drawable/ic_launcher_icon"
                                    android:layout_height="match_parent" />
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:text="直播标题"
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                    <TextView
                                        android:layout_weight="1"
                                        android:text="直播类型"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.shehuan.niv.NiceImageView
                            android:layout_marginTop="10dp"
                            app:corner_radius="10dp"
                            android:src="@mipmap/item6"
                            android:layout_gravity="center"
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:src="@drawable/ic_launcher_icon"
                                android:layout_height="match_parent" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="主播名"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:layout_weight="1"
                                    android:text="直播内容"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
               <!--推荐直播第二列-->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.shehuan.niv.NiceImageView
                            android:layout_marginTop="10dp"
                            app:corner_radius="10dp"
                            android:src="@mipmap/item6"
                            android:layout_gravity="center"
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:src="@drawable/ic_launcher_icon"
                                android:layout_height="match_parent" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="直播标题"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:layout_weight="1"
                                    android:text="直播类型"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.shehuan.niv.NiceImageView
                            android:layout_marginTop="10dp"
                            app:corner_radius="10dp"
                            android:src="@mipmap/item6"
                            android:layout_gravity="center"
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:src="@drawable/ic_launcher_icon"
                                android:layout_height="match_parent" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="主播名"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:layout_weight="1"
                                    android:text="直播内容"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--推荐直播第三列-->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.shehuan.niv.NiceImageView
                            android:layout_marginTop="10dp"
                            app:corner_radius="10dp"
                            android:src="@mipmap/item6"
                            android:layout_gravity="center"
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:src="@drawable/ic_launcher_icon"
                                android:layout_height="match_parent" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="直播标题"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:layout_weight="1"
                                    android:text="直播类型"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.shehuan.niv.NiceImageView
                            android:layout_marginTop="10dp"
                            app:corner_radius="10dp"
                            android:src="@mipmap/item6"
                            android:layout_gravity="center"
                            android:layout_width="160dp"
                            android:layout_height="90dp"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:src="@drawable/ic_launcher_icon"
                                android:layout_height="match_parent" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="主播名"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:layout_weight="1"
                                    android:text="直播内容"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/Pink"
                    android:text="更多推荐直播 > "
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/Gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <!--推荐直播页结束-->
            <!--分类页开始-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--小时榜开始-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="小时榜"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="00:00-00:00 总榜排名"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="查看更多 > "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                       <com.shehuan.niv.NiceImageView
                           android:src="@drawable/ic_launcher_icon"
                           app:is_circle="true"
                           app:border_width="2dp"
                           android:layout_gravity="center"
                           app:border_color="@color/Pink"
                           android:layout_marginTop="25dp"
                           android:layout_marginBottom="25dp"
                           android:layout_width="50dp"
                           android:layout_height="50dp" />
                        <TextView
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textColor="@color/Black"
                            android:text="用户名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="直播类型"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:background="@color/Gray"
                        android:layout_width="1dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.shehuan.niv.NiceImageView
                            android:src="@drawable/ic_launcher_icon"
                            app:is_circle="true"
                            app:border_width="2dp"
                            android:layout_gravity="center"
                            app:border_color="@color/Pink"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />
                        <TextView
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textColor="@color/Black"
                            android:text="用户名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="直播类型"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:background="@color/Gray"
                        android:layout_width="1dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.shehuan.niv.NiceImageView
                            android:src="@drawable/ic_launcher_icon"
                            app:is_circle="true"
                            app:border_width="2dp"
                            android:layout_gravity="center"
                            app:border_color="@color/Pink"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                        <TextView
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textColor="@color/Black"
                            android:text="用户名"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textSize="12dp"
                            android:gravity="center"
                            android:text="直播类型"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <!--小时榜结束-->
                <View
                    android:layout_marginTop="20dp"
                    android:background="@color/Gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <!--分类列表开始-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/LiveStreaming_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <!--分类列表结束-->
            </LinearLayout>
            <!--分类页结束-->
            <LinearLayout
                android:gravity="center"
                android:background="@color/Gray"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <Button
                    android:text="全部直播"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
   </android.support.v4.widget.NestedScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
</FrameLayout>