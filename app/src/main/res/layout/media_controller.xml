<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_controller"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_return"
            android:src="@drawable/ic_return"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/tv_networkType"
            android:text="4G·后台"
            android:textSize="15dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tv_bg"
            android:layout_toRightOf="@id/iv_return"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.example.myapplication.ouwenbin.utils.view.MyTextView
            android:id="@+id/tv_videoName"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusableInTouchMode="true"
            android:textSize="18dp"
            android:text="视频名称·8888888888888888888888888888"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/tv_networkType"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/tv_system_time"
            android:layout_toRightOf="@id/tv_videoName"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:text="12:00"
            android:textColor="#ffffff" />
        <ImageView
            android:id="@+id/iv_battery"
            android:src="@drawable/ic_battery_0"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_system_time"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp" />
        <ImageView
            android:id="@+id/iv_like"
            android:src="@drawable/ic_like_f"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_battery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp" />
        <ImageView
            android:id="@+id/iv_tread"
            android:src="@drawable/ic_tread_f"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_like"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/iv_coin"
            android:src="@drawable/ic_coin"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_tread"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/iv_share"
            android:src="@drawable/ic_share1"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_coin"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/iv_menus"
            android:src="@drawable/ic_menus"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_share"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_lock_Right"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_lock1"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ic_camera"
            android:src="@drawable/ic_camera"
            android:padding="6dp"
            android:layout_marginBottom="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/ic_lock_Left"
            android:src="@drawable/ic_lock1"
            android:padding="6dp"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <SeekBar
            android:id="@+id/seekbar_video"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:progress="50"
            android:layout_marginTop="5dp"
            android:paddingLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/seekbar_bg"
            android:progressDrawable="@drawable/progress_horizontal"
            android:thumb="@drawable/progress_thumb" />
        <ImageView
            android:id="@+id/iv_pause"
            android:src="@drawable/ic_pause"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tv_playingCourse"
            android:layout_toRightOf="@id/iv_pause"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="12:00/20:00"
            android:textColor="#ffffff" />
        <ImageView
            android:id="@+id/iv_danmuguang"
            android:src="@drawable/ic_danmukai"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_playingCourse"
            android:layout_marginLeft="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/iv_danmakuSet"
            android:src="@drawable/ic_danmu"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_danmuguang"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/bnt_addDanmaku"
            android:text="发个友善弹幕见证当下！"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_danmakuSet"
            android:layout_toLeftOf="@+id/tv_resolutionRatio"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bnt_danmu_bg_selector"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tv_resolutionRatio"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="1080P"
            android:textColor="#ffffff" />
    </RelativeLayout>
</RelativeLayout>